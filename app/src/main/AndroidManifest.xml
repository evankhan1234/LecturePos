<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xact.idea.lecturepos">

    <application
        android:name="androidx.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@drawable/img_background"
        android:label="@string/app_name"
        android:roundIcon="@drawable/img_background"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".InvoiceListActivity"></activity>
        <activity android:name=".BarcodeActivity" />
        <activity android:name=".ItemActivity" />
        <activity android:name=".QRCodeActivity" />
        <activity android:name=".InvoiceActivity" />
        <activity android:name=".CustomerCreateActivity" />
        <activity android:name=".CustomerActivity" />
        <activity android:name=".OnBoardingActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".Portait"
            android:screenOrientation="fullSensor"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".SpalashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>