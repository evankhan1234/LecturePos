<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/rlt_root"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="@color/white"

                android:id="@+id/rlt_header"
                android:layout_width="match_parent"
                android:layout_height="250px"
                android:visibility="visible">

                <ImageButton
                    android:id="@+id/btn_header_back"
                    android:layout_width="136px"
                    android:layout_height="145px"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="62px"
                    android:background="@color/transparent"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:paddingBottom="3px"

                    android:stateListAnimator="@null"
                    android:visibility="visible"
                    app:srcCompat="@drawable/back" />

                <ImageView

                    android:id="@+id/btn_header_application"
                    android:layout_width="86px"
                    android:layout_height="85px"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="95px"

                    app:srcCompat="@drawable/plus"

                    android:foreground="?android:attr/selectableItemBackground"
                    android:paddingBottom="3px"

                    android:stateListAnimator="@null"
                    android:layout_marginRight="30px"
                    android:visibility="gone"
                    />


                <TextView

                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:letterSpacing="0.1"

                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="120px"
                    android:paddingRight="120px"
                    android:tag="46"
                    android:text="Stock"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="46px" />




            </RelativeLayout>

            <View
                android:id="@+id/view_header"
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_below="@+id/rlt_header"
                android:layout_marginTop="1dp"
                android:background="@drawable/gradient_color_top" />
            <LinearLayout

                android:layout_below="@+id/view_header"
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <androidx.cardview.widget.CardView

                        android:layout_width="0dp"
                        android:layout_height="450px"
                        android:layout_weight="1"
                        card_view:cardBackgroundColor="#FFFFFF"
                        card_view:cardCornerRadius="25px"
                        card_view:cardElevation="1dp"
                        card_view:cardUseCompatPadding="true" >

                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView

                                android:src="@drawable/overflow"
                                android:layout_width="150px"
                                android:layout_height="150px"/>
                            <TextView
                                android:tag="40"
                                android:textSize="40px"
                                android:textStyle="bold"
                                android:textColor="@color/gray_black"
                                android:layout_marginTop="20px"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:text="Total Books"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/text_book"
                                android:tag="40"
                                android:textSize="40px"
                                android:textStyle="bold"
                                android:textColor="@color/gray_black"
                                android:layout_marginTop="20px"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:text="0"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>



                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="450px"
                        android:layout_weight="1"
                        card_view:cardBackgroundColor="#FFFFFF"
                        card_view:cardCornerRadius="25px"
                        card_view:cardElevation="1dp"
                        card_view:cardUseCompatPadding="true" >
                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView

                                android:src="@drawable/coin"
                                android:layout_width="150px"
                                android:layout_height="150px"/>
                            <TextView
                                android:tag="40"
                                android:textSize="40px"
                                android:textStyle="bold"
                                android:textColor="@color/gray_black"
                                android:layout_marginTop="20px"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:text="Total Price"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/text_net_price"
                                android:tag="40"
                                android:textSize="40px"
                                android:textStyle="bold"
                                android:textColor="@color/gray_black"
                                android:layout_marginTop="20px"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:text=""
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_waist"
                        android:layout_width="0dp"
                        android:layout_height="450px"
                        android:layout_weight="1"
                        card_view:cardBackgroundColor="#FFFFFF"
                        card_view:cardCornerRadius="25px"
                        card_view:cardElevation="1dp"
                        card_view:cardUseCompatPadding="true" >

                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView

                                android:src="@drawable/dollar"
                                android:layout_width="150px"
                                android:layout_height="150px"/>
                            <TextView
                                android:tag="40"
                                android:textSize="40px"
                                android:textStyle="bold"
                                android:textColor="@color/gray_black"
                                android:layout_marginTop="20px"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:text="Cash"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/text_cash"
                                android:tag="40"
                                android:textSize="40px"
                                android:textStyle="bold"
                                android:textColor="@color/gray_black"
                                android:layout_marginTop="20px"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:text=""
                                android:layout_height="wrap_content"/>
                        </LinearLayout>



                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="450px"
                        android:layout_weight="1"
                        card_view:cardBackgroundColor="#FFFFFF"
                        card_view:cardCornerRadius="25px"
                        card_view:cardElevation="1dp"
                        card_view:cardUseCompatPadding="true" >
                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView

                                android:src="@drawable/credit_payment"
                                android:layout_width="150px"
                                android:layout_height="150px"/>
                            <TextView
                                android:tag="40"
                                android:textSize="40px"
                                android:textStyle="bold"
                                android:textColor="@color/gray_black"
                                android:layout_marginTop="20px"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:text="Credit"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/text_credit"
                                android:tag="40"
                                android:textSize="40px"
                                android:textStyle="bold"
                                android:textColor="@color/gray_black"
                                android:layout_marginTop="20px"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:text=""
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20px"
                android:layout_below="@+id/layout"
                android:id="@+id/filter"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_start_date"
                    android:focusable="false"
                    android:drawableLeft="@drawable/ic_date_vector_dark"
                    android:drawablePadding="15px"
                    android:paddingLeft="20px"
                    android:hint="Start Date"
                    android:layout_marginLeft="30px"
                    android:background="@drawable/border"

                    android:layout_width="400px"
                    android:layout_height="100px"/>
                <EditText
                    android:id="@+id/edit_end_date"
                    android:drawableLeft="@drawable/ic_date_vector_dark"
                    android:drawablePadding="15px"
                    android:paddingLeft="20px"
                    android:hint="End Date"
                    android:layout_marginLeft="40px"
                    android:background="@drawable/border"
                    android:focusable="false"
                    android:layout_width="400px"
                    android:layout_height="100px"/>
                <Button
                    android:layout_marginLeft="20px"
                    android:tag="45"
                    android:textSize="45px"

                    android:id="@+id/btn_yes"
                    android:background="@drawable/capsule_button"
                    android:layout_marginRight="40px"
                    android:hint="Show"
                    android:textColorHint="#fff"
                    android:layout_width="200px"
                    android:layout_height="100px" />
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_below="@+id/filter"
                android:layout_marginTop="30px"

                android:id="@+id/card_view"
                android:layout_width="match_parent"

                android:layout_height="match_parent"


                android:layout_marginLeft="20px"

                android:layout_marginRight="20px"

                card_view:cardBackgroundColor="#FFFFFF"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <EditText



                    android:drawablePadding="25px"
                    android:id="@+id/edit_content"
                    android:layout_width="match_parent"
                    android:layout_height="140px"
                    android:background="@null"
                    android:inputType="text|textNoSuggestions"
                    android:drawableLeft="@drawable/icon_search"
                    android:hint="Search by Invoice Number"
                    android:paddingLeft="40px"
                    android:paddingTop="20px"
                    android:paddingBottom="20px"
                    android:textColorHint="#4D6A6B6B" />


            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="20px"
                android:layout_below="@+id/card_view"

                android:id="@+id/rcl_approval_in_list"
                android:layout_width="match_parent"


                android:layout_height="match_parent"


                android:nestedScrollingEnabled="false"




                >

            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>
    </ScrollView>
    <ProgressBar

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:background="@android:color/transparent" />
</RelativeLayout>