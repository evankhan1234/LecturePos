<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:id="@+id/rlt_root"
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#fff" android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="#fff"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@color/white"

            android:id="@+id/rlt_header"
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:visibility="visible">

            <ImageView
                android:id="@+id/btn_header_back"
                android:layout_width="86px"
                android:layout_height="85px"
                android:layout_marginTop="85px"

                android:paddingBottom="3px"


                android:visibility="visible"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/btn_header_application"
                android:layout_width="86px"
                android:layout_height="85px"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10px"
                android:layout_marginTop="95px"

                app:srcCompat="@drawable/graphic_design"

                android:foreground="?android:attr/selectableItemBackground"
                android:paddingBottom="3px"

                android:stateListAnimator="@null"
                android:layout_marginRight="30px"
                android:visibility="gone"
                />


            <TextView

                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center"
                android:letterSpacing="0.1"

                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="120px"
                android:paddingRight="120px"
                android:tag="46"
                android:text="Customer Create"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="46px" />




        </RelativeLayout>

        <View
            android:id="@+id/view_header"
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:layout_below="@+id/rlt_header"
            android:layout_marginTop="1dp"
            android:background="@drawable/gradient_color_top" />
    <LinearLayout
        android:orientation="vertical"
        android:background="#fff"
        android:paddingLeft="35px"
        android:paddingTop="35px"
        android:paddingRight="35px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:textColor="#666"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="First Name"/>
                <EditText android:textSize="16sp" android:id="@+id/firstName" android:background="@drawable/input_bg" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:hint="First Name" android:ems="10" android:inputType="textPersonName"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                <TextView android:textColor="#666" android:id="@+id/textView47" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:text="Last Name"/>
                <EditText android:textSize="16sp" android:id="@+id/lastName" android:background="@drawable/input_bg" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:hint="Last Name" android:ems="10" android:inputType="textPersonName"/>
            </LinearLayout>
        </LinearLayout>
        <TextView android:textColor="#666" android:id="@+id/textView49" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:text="Contact Number"/>
        <EditText android:textSize="16sp" android:id="@+id/phone" android:background="@drawable/input_bg" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:hint="Contact number" android:ems="10" android:inputType="phone"/>
        <TextView android:textColor="#666" android:id="@+id/textView50" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:text="Retail Code"/>
        <EditText android:textSize="16sp" android:id="@+id/retail_code" android:background="@drawable/input_bg" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:hint="Retail Code" android:ems="10" android:inputType="text"/>
        <TextView android:textColor="#666" android:id="@+id/textView51" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:text="Address"/>
        <EditText android:textSize="16sp" android:id="@+id/address" android:background="@drawable/input_bg" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:hint="Address" android:ems="10" android:inputType="textPostalAddress"/>
        <Button android:textSize="16sp" android:textColor="#fff" android:id="@+id/create" android:background="@drawable/input_btn_bg" android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="15dp" android:text="Create Customer" android:fontFamily="sans-serif" android:stateListAnimator="@null" />
    </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
