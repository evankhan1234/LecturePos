<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rlt_root"
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#fff" android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView

        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginBottom="30px"
        android:id="@+id/main_root"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

    <LinearLayout
        android:orientation="vertical"
        android:background="#fff"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@color/white"

            android:id="@+id/rlt_header"
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:visibility="visible">

            <ImageView
                android:id="@+id/btn_header_back"
                android:layout_width="86px"
                android:layout_height="85px"
                android:layout_marginTop="85px"

                android:paddingBottom="3px"


                android:visibility="visible"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/btn_header_application"
                android:layout_width="86px"
                android:layout_height="85px"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10px"
                android:layout_marginTop="95px"

                app:srcCompat="@drawable/graphic_design"

                android:foreground="?android:attr/selectableItemBackground"
                android:paddingBottom="3px"

                android:stateListAnimator="@null"
                android:layout_marginRight="30px"
                android:visibility="gone"
                />


            <TextView

                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center"
                android:letterSpacing="0.1"

                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="120px"
                android:paddingRight="120px"
                android:tag="46"
                android:text="Invoice Create"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="46px" />




        </RelativeLayout>

        <View
            android:id="@+id/view_header"
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:layout_below="@+id/rlt_header"
            android:layout_marginTop="1px"
            android:background="@drawable/gradient_color_top" />
        <LinearLayout
            android:orientation="vertical"
            android:background="#fff"
            android:paddingLeft="35px"
            android:paddingTop="35px"
            android:paddingRight="35px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#666"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8px"
                android:text="Bill Pay"/>
            <Spinner
                android:background="@drawable/test"
                android:layout_marginTop="20px"

                android:id="@+id/spinner_unit"
                android:layout_width="match_parent"
                android:layout_marginBottom="30px"
                android:layout_height="130px"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout android:orientation="vertical"
                    android:paddingRight="10px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:textColor="#666"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8px"
                        android:text="Invoice Date"/>
                    <EditText android:textSize="32px" android:id="@+id/invoice" android:background="@drawable/input_bg" android:padding="25px" android:layout_width="match_parent" android:layout_height="120px" android:layout_marginBottom="10px" android:hint="Invoice Date" android:ems="10" android:inputType="textPersonName"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:paddingLeft="10px" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                    <TextView android:textColor="#666" android:id="@+id/textView47" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8px" android:text="Retail Code"/>
                    <EditText android:textSize="32px" android:id="@+id/lastName" android:background="@drawable/input_bg" android:padding="25px" android:layout_width="match_parent" android:layout_height="120px" android:layout_marginBottom="10px" android:hint="Retail Code" android:ems="10" android:inputType="textPersonName"/>
                </LinearLayout>
            </LinearLayout>
            <TextView android:textColor="#666" android:id="@+id/textView49" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8px" android:text="Contact Number"/>
            <EditText android:textSize="32px" android:id="@+id/phone" android:background="@drawable/input_bg" android:padding="25px" android:layout_width="match_parent" android:layout_height="120px" android:layout_marginBottom="10px" android:hint="Contact number" android:ems="10" android:inputType="phone"/>

            <TextView android:textColor="#666" android:id="@+id/textView51" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8px" android:text="Address"/>
            <EditText android:textSize="32px" android:id="@+id/address" android:background="@drawable/input_bg" android:padding="25px" android:layout_width="match_parent" android:layout_height="120px" android:layout_marginBottom="10px" android:hint="Address" android:ems="10" android:inputType="textPostalAddress"/>
            <TextView
                android:textColor="#666"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8px"
                android:text="Items"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="10px"


                android:nestedScrollingEnabled="false"
                android:id="@+id/rcl_this_customer_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </androidx.recyclerview.widget.RecyclerView>
            <Button

                android:textSize="32px" android:textColor="#fff" android:id="@+id/create" android:background="@drawable/capsule_button" android:paddingTop="25px" android:paddingBottom="25px" android:layout_width="match_parent" android:layout_height="150px" android:layout_marginTop="10px" android:layout_marginBottom="25px" android:text="Scan For Items" android:fontFamily="sans-serif" android:stateListAnimator="@null" />
            <RelativeLayout
                android:layout_marginTop="30px"
                android:id="@+id/cibact_RLDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal"
              >

                <LinearLayout
                    android:gravity="left"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/linLayoutAmount"
                    android:layout_toRightOf="@+id/adp_cib_TvNameCircle"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_customer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical|center_horizontal|center|start"
                        android:singleLine="true"
                        android:tag="35"
                        android:text="Sub Total "
                        android:textColor="@color/text_color_new"
                        android:textSize="35px" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linLayoutAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="end"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/cibact_TvPaidUnpaid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="1dp"
                            android:paddingRight="1dp"
                            android:tag="35"
                            android:text="zdczxv"
                            android:textColor="@color/text_color_new"
                            android:textSize="35px"
                            />

                        <TextView
                            android:id="@+id/text_store_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:paddingLeft="1dp"
                            android:paddingRight="1dp"
                            android:text="BDT 235"
                            android:textColor="@color/black"
                            android:textSize="35px"
                            />
                    </LinearLayout>



                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:visibility="gone"
                    android:id="@+id/adp_cib_TvNameCircle"
                    android:layout_width="85px"
                    android:layout_height="85px"
                    android:layout_centerVertical="true"
                    android:gravity="center"

                    android:src="@drawable/man"
                    />

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/linLayoutShippingCharges"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="2dp"
                android:visibility="visible">
                <TextView
                    android:layout_marginTop="75px"
                    android:id="@+id/txtShippingCharges"
                    android:layout_width="wrap_content"
                    android:layout_height="150px"
                    android:layout_gravity="end"
                    android:layout_weight="0.6"
                    android:background="?attr/selectableItemBackground"
                    android:ellipsize="end"
                    android:paddingLeft="10dp"
                    android:paddingTop="35px"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:singleLine="true"
                    android:text="(-) Discount"
                    android:textColor="@color/hint_text_color_new"
                    android:textSize="35px"
                    android:tag="35"
                     />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/roundeds"

                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <EditText
                        android:id="@+id/editShippingChargesValue"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/txtPrefixShippingCharges"

                        android:digits="0123456789.,"
                        android:ellipsize="end"
                        android:gravity="left|center_vertical|center_horizontal|center|start"
                        android:inputType="number"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:selectAllOnFocus="true"
                        android:background="@drawable/roundeds"
                        android:singleLine="true"
                        android:text="0"
                        android:tag="35px"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="35px"
                        />

                    <TextView
                        android:id="@+id/txtPrefixShippingCharges"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="%"
                        android:textColor="@color/white"

                        android:textSize="35px"
                        />
                </RelativeLayout>


            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="30px"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:gravity="left"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/linLayoutAmountsss"
                    android:layout_toRightOf="@+id/adp_cib_TvNameCircle"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_customerssszzz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical|center_horizontal|center|start"
                        android:singleLine="true"
                        android:tag="35"
                        android:text="Net Total "
                        android:textColor="@color/text_color_new"
                        android:textSize="35px" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linLayoutAmountsss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="end"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/cibact_TvPaidUnpaids"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="1dp"
                            android:paddingRight="1dp"
                            android:tag="35"
                            android:text="zdczxv"
                            android:textColor="@color/text_color_new"
                            android:textSize="35px"
                            />

                        <TextView
                            android:id="@+id/text_net_amounts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:paddingLeft="1dp"
                            android:paddingRight="1dp"
                            android:text="BDT 235"
                            android:textColor="@color/black"
                            android:textSize="35px"
                            />
                    </LinearLayout>



                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:visibility="gone"
                    android:id="@+id/adp_cib_TvNameCircles"
                    android:layout_width="85px"
                    android:layout_height="85px"
                    android:layout_centerVertical="true"
                    android:gravity="center"

                    android:src="@drawable/man"
                    />

            </RelativeLayout>
            <View
                android:layout_below="@+id/cibact_RLDetail"


                android:layout_width="match_parent"
                android:layout_height="150px"/>
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
    </ScrollView>
</LinearLayout>
