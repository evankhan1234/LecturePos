<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:chainUseRtl="true">

    <RelativeLayout
        android:id="@+id/cibact_RLDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/linLayoutAmount"
            android:layout_toRightOf="@+id/adp_cib_TvNameCircle"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:gravity="start"
                android:maxLines="1"
                android:text="zdczxv"
                android:textColor="@color/text_color_new"
                android:tag="35"
                android:textSize="35px"

                />
            <TextView
                android:id="@+id/text_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical|center_horizontal|center|start"
                android:singleLine="true"
                android:tag="35"
                android:text="zdczxv"

                android:textSize="35px"
                 />

            <TextView
                android:id="@+id/text_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:gravity="start"
                android:maxLines="1"
                android:text="zdczxv"
                android:textColor="@color/hint_text_color_new"
                android:tag="35"
                android:textSize="35px"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linLayoutAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/cibact_TvPaidUnpaid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:tag="35"
                    android:text="zdczxv"
                    android:textColor="@color/text_color_new"
                    android:textSize="35px"
                    />

                <TextView
                    android:id="@+id/text_store_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:text="zdczxv"
                    android:tag="35"
                    android:textColor="@color/hint_text_color_new"
                    android:textSize="35px"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/text_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:gravity="bottom|right|center_vertical|center_horizontal|center|end"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"

                android:tag="35"
                android:text="zdczxv"
                android:textColor="@color/hint_text_color_new"
                android:textSize="35px"
                />


        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/adp_cib_TvNameCircle"
            android:layout_width="85px"
            android:layout_height="85px"
            android:layout_centerVertical="true"
            android:gravity="center"

            android:src="@drawable/man"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_centerInParent="true"
        android:id="@+id/linear"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_below="@+id/cibact_RLDetail"

        android:layout_marginTop="10px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_details"
            android:layout_width="258px"
            android:layout_height="88px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="11px"
            android:layout_marginTop="7px"
            android:layout_marginRight="10px"
            android:background="@drawable/status_accepted"
            android:gravity="center_horizontal|center_vertical"
            android:paddingLeft="0px"
            android:paddingRight="5px"
            android:paddingBottom="4px"
            android:tag="34"
            android:text="View Details"
            android:textColor="@color/white"
            android:textSize="34px"
            />

        <TextView
            android:id="@+id/text_create_invoice"
            android:backgroundTint="#071564"
            android:layout_width="258px"
            android:layout_height="88px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="11px"
            android:layout_marginTop="7px"
            android:layout_marginRight="10px"
            android:background="@drawable/status_accepted"
            android:gravity="center_horizontal|center_vertical"
            android:paddingLeft="0px"
            android:paddingRight="5px"
            android:paddingBottom="4px"
            android:tag="34"
            android:text="Create Invoice"
            android:textColor="@color/white"
            android:textSize="34px"
            />

        <TextView
            android:visibility="visible"
            android:id="@+id/text_update"
            android:layout_width="228px"
            android:layout_height="88px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="11px"
            android:layout_marginTop="7px"
            android:layout_marginRight="10px"
            android:backgroundTint="#2196F3"
            android:background="@drawable/status_accepted"
            android:gravity="center_horizontal|center_vertical"
            android:paddingLeft="0px"
            android:paddingRight="5px"
            android:paddingBottom="4px"
            android:tag="34"
            android:text="Sales Return"
            android:textColor="@color/white"
            android:textSize="34px"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/text_delete"
            android:backgroundTint="#FF5722"
            android:layout_width="228px"
            android:layout_height="58px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="11px"
            android:layout_marginTop="7px"
            android:layout_marginRight="10px"
            android:background="@drawable/status_accepted"
            android:gravity="center_horizontal|center_vertical"
            android:paddingLeft="0px"
            android:paddingRight="5px"
            android:paddingBottom="4px"
            android:tag="34"
            android:text="delete"
            android:textColor="@color/white"
            android:textSize="34px"
            />
    </LinearLayout>
    <View
        android:layout_marginTop="30px"
        android:layout_below="@+id/linear"
        android:background="#CCC"
        android:layout_width="match_parent"
        android:layout_height="2px"/>
</RelativeLayout>
