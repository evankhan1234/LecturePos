<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout

        android:id="@+id/rlt_header"
        android:layout_width="match_parent"
        android:layout_height="250px"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/btn_header_back"
            android:layout_width="126px"
            android:layout_height="135px"
            android:layout_marginLeft="10px"
            android:layout_marginTop="55px"

            android:foreground="?android:attr/selectableItemBackground"
            android:paddingBottom="3px"

            android:stateListAnimator="@null"
            android:visibility="visible"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/btn_header_application"
            android:layout_width="126px"
            android:layout_height="105px"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10px"
            android:layout_marginTop="105px"
            android:layout_marginRight="50px"
            android:textSize="40px"
            android:tag="45"
            android:text="Create"

            android:foreground="?android:attr/selectableItemBackground"
            android:paddingBottom="3px"

            android:stateListAnimator="@null"
            android:visibility="visible"
           />


        <TextView

            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:letterSpacing="0.1"

            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="120px"
            android:paddingRight="120px"
            android:tag="46"
            android:text="Customer"
            android:textColor="@color/colorPrimary"
            android:textSize="46px" />




    </RelativeLayout>

    <View
        android:id="@+id/view_header"
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:layout_below="@+id/rlt_header"
        android:layout_marginTop="1dp"
        android:background="@drawable/gradient_color_top" />


</LinearLayout>