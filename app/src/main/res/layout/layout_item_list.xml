<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="50px"
    android:clipToPadding="false"
    android:layout_margin="0px">

    <androidx.cardview.widget.CardView

        android:id="@+id/card_view"


        android:layout_width="match_parent"
        android:layout_height="280px"

        card_view:cardElevation="5px"

        card_view:cardBackgroundColor="#FFFFFF"

        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="5px">
        <View
            android:id="@+id/view_color"
            android:background="@color/colorPrimary"
            android:layout_width="10px"
            android:layout_height="wrap_content"/>
        <LinearLayout

            android:layout_marginBottom="10px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:orientation="vertical"
            android:visibility="visible"
            android:padding="10px">





            <LinearLayout


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RelativeLayout
                    android:id="@+id/cibact_RLDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="20px"
                    android:paddingTop="10px"
                    android:paddingRight="20px"
                    android:paddingBottom="10px">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"

                        android:layout_toLeftOf="@+id/linLayoutAmount"
                        android:layout_toRightOf="@+id/adp_cib_TvNameCircle"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_book"
                            android:layout_width="match_parent"
                            android:layout_height="80px"
                            android:layout_marginBottom="1px"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical|center_horizontal|center|start"
                            android:singleLine="true"
                            android:tag="35"
                            android:text="zdczxv"
                            android:textColor="#358ED3"
                            android:textSize="35px"
                            />

                        <LinearLayout
                            android:layout_marginTop="40px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_update"
                                android:layout_width="228px"
                                android:layout_height="58px"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="11px"
                                android:layout_marginTop="7px"
                                android:layout_marginRight="10px"
                                android:background="@drawable/status_accepted"
                                android:gravity="center_horizontal|center_vertical"
                                android:paddingLeft="0px"
                                android:paddingRight="5px"
                                android:paddingBottom="4px"
                                android:tag="34"
                                android:text="update"
                                android:textColor="@color/white"
                                android:textSize="34px"
                                />

                            <TextView
                                android:id="@+id/text_delete"
                                android:backgroundTint="#FF5722"
                                android:layout_width="228px"
                                android:layout_height="58px"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="11px"
                                android:layout_marginTop="7px"
                                android:layout_marginRight="10px"
                                android:background="@drawable/status_accepted"
                                android:gravity="center_horizontal|center_vertical"
                                android:paddingLeft="0px"
                                android:paddingRight="5px"
                                android:paddingBottom="4px"
                                android:tag="34"
                                android:text="delete"
                                android:textColor="@color/white"
                                android:textSize="34px"
                                />

                        </LinearLayout>
                        <TextView

                            android:visibility="gone"
                            android:id="@+id/text_stock"
                            android:backgroundTint="#E91E63"
                            android:layout_width="228px"
                            android:layout_height="58px"
                            android:layout_gravity="right"
                            android:layout_marginLeft="11px"
                            android:layout_marginTop="7px"
                            android:layout_marginRight="10px"
                            android:background="@drawable/status_accepted"
                            android:gravity="center"
                            android:paddingLeft="0px"
                            android:paddingRight="5px"
                            android:paddingBottom="4px"
                            android:tag="34"
                            android:text="Stock out"
                            android:textColor="@color/white"
                            android:textSize="34px"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linLayoutAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="end"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <TextView
            
                                android:id="@+id/text_quantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="1px"
                                android:paddingRight="1px"
                                android:tag="35"
                                android:text="zdczxv"
                                android:textColor="#358ED3"
                                android:textSize="35px"
                                />

                            <TextView
                                android:id="@+id/text_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:paddingLeft="1px"
                                android:paddingRight="1px"
                                android:text="zdczxv"
                                android:tag="35"
                                android:textColor="#358ED3"
                                android:textSize="35px"
                                />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/text_discount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3px"
                            android:layout_weight="1"
                            android:gravity="bottom|right|center_vertical|center_horizontal|center|end"
                            android:paddingLeft="1px"
                            android:paddingRight="1px"
                            android:tag="35"
                            android:text="zdczxv"
                            android:textColor="#358ED3"
                            android:textSize="35px"
                            />
                        <TextView
                            android:id="@+id/text_total"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3px"
                            android:layout_weight="1"
                            android:gravity="bottom|right|center_vertical|center_horizontal|center|end"
                            android:paddingLeft="1px"
                            android:paddingRight="1px"

                            android:tag="35"
                            android:text="zdczxv"
                            android:textColor="#358ED3"
                            android:textSize="35px"
                            />


                    </LinearLayout>


                </RelativeLayout>

             


            </LinearLayout>

       
            


        

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>