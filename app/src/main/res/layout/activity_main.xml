<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:id="@+id/root_rlt_dashboard"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginTop="-42px"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20px"
            android:alpha="1.5"
            tools:context=".ui.dashboard.DashBoardFragment">


            <TextView

                android:id="@+id/tv_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="164px"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_horizontal"
                android:letterSpacing=".01"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"

                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="1px"
                android:paddingTop="1px"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:tag="58"
                android:text="Welcome To the Real Time Based Sales Solutions"
                android:textColor="#FF9800"
                android:textStyle="bold"
                android:textSize="58px" />

                <LinearLayout
                    android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_store"
                android:layout_marginTop="59px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="23px"
                    android:layout_marginRight="23px"


                    android:alpha="1.5"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="500px"
                        android:layout_weight="1"
                        android:layout_marginTop="0px"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <LinearLayout
                            android:backgroundTint="#FFC107"
                            android:id="@+id/linear_invoice"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1px"
                            android:layout_marginRight="5px"
                            android:layout_weight="1"
                            android:background="@drawable/white_bx"

                            android:orientation="vertical"

                            >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="1px"
                                android:layout_marginTop="100px"
                                android:src="@drawable/bill" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="28px"
                                android:gravity="center_horizontal"
                                android:tag="52"
                                android:textStyle="bold"
                                android:text="Invoice"
                                android:textColor="@color/white"
                                android:textSize="52px" />


                        </LinearLayout>
                        <LinearLayout
                            android:backgroundTint="#FFC107"
                            android:id="@+id/linear_notes"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1px"
                            android:layout_marginRight="5px"
                            android:layout_weight="1"
                            android:background="@drawable/white_bx"

                            android:orientation="vertical"

                            >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="1px"
                                android:layout_marginTop="100px"
                                android:src="@drawable/list" />

                            <TextView
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="28px"
                                android:gravity="center_horizontal"
                                android:tag="52"
                                android:text="Invoice List"
                                android:textColor="@color/white"
                                android:textSize="52px" />


                        </LinearLayout>




                    </LinearLayout>







                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="23px"
                        android:layout_marginRight="23px"


                        android:alpha="1.5"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="500px"
                            android:layout_weight="1"
                            android:layout_marginTop="0px"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <LinearLayout
                                android:backgroundTint="#FFC107"
                                android:id="@+id/linear_customers"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="1px"
                                android:layout_marginRight="5px"
                                android:layout_weight="1"
                                android:background="@drawable/white_bx"

                                android:orientation="vertical"

                                >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginLeft="1px"
                                    android:layout_marginTop="100px"
                                    android:src="@drawable/customers" />

                                <TextView
                                    android:textStyle="bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="28px"
                                    android:gravity="center_horizontal"
                                    android:tag="52"
                                    android:text="Customers"
                                    android:textColor="@color/white"
                                    android:textSize="52px" />


                            </LinearLayout>
                            <LinearLayout
                                android:backgroundTint="#FFC107"
                                android:id="@+id/linear_logout"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="1px"
                                android:layout_marginRight="5px"
                                android:layout_weight="1"
                                android:background="@drawable/white_bx"

                                android:orientation="vertical"

                                >
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginLeft="1px"
                                    android:layout_marginTop="100px"
                                    android:src="@drawable/logout" />

                                <TextView
                                    android:textStyle="bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="28px"
                                    android:gravity="center_horizontal"
                                    android:tag="52"
                                    android:text="Logout"
                                    android:textColor="@color/white"
                                    android:textSize="52px" />


                            </LinearLayout>




                        </LinearLayout>







                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="23px"
                        android:layout_marginRight="23px"


                        android:alpha="1.5"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="500px"
                            android:layout_weight="1"
                            android:layout_marginTop="0px"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <LinearLayout
                                android:backgroundTint="#FFC107"
                                android:id="@+id/linear_website"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="1px"
                                android:layout_marginRight="5px"
                                android:layout_weight="1"
                                android:background="@drawable/white_bx"

                                android:orientation="vertical"

                                >


                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginLeft="1px"
                                    android:layout_marginTop="100px"
                                    android:src="@drawable/internet" />
                                <TextView
                                    android:textStyle="bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="28px"
                                    android:gravity="center_horizontal"
                                    android:tag="52"
                                    android:text="Website"
                                    android:textColor="@color/white"
                                    android:textSize="52px" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linear_sync"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="1px"
                                android:layout_marginRight="5px"
                                android:layout_weight="1"
                                android:background="@drawable/white_bx"
                                android:backgroundTint="#FFC107"

                                android:orientation="vertical"

                                >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginLeft="1px"
                                    android:layout_marginTop="100px"
                                    android:src="@drawable/sync" />
                                <TextView
                                    android:textStyle="bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="28px"
                                    android:gravity="center_horizontal"
                                    android:tag="52"

                                    android:text="Sync"
                                    android:textColor="@color/white"
                                    android:textSize="52px" />


                            </LinearLayout>


                        </LinearLayout>







                    </LinearLayout>
                    <TextView

                        android:id="@+id/tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="70px"

                        android:layout_marginTop="37px"
                        android:alpha="1.5"
                        android:gravity="center_horizontal"
                        android:letterSpacing=".01"
                        android:paddingRight="1px"
                        android:tag="49"
                        android:text="09 February,2019"
                        android:textStyle="bold"
                        android:textColor="#FF5722"
                        android:textSize="49px" />
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>