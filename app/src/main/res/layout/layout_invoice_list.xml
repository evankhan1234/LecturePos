<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0px"
    android:clipToPadding="false"
    android:elevation="50px">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"


        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="5px"

        card_view:cardElevation="5px"
        card_view:cardUseCompatPadding="true">
        <View
            android:id="@+id/view_color"
            android:layout_width="10px"
            android:layout_height="313px"
            android:background="@color/colorPrimary" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_marginTop="5px"
            android:layout_marginRight="5px"
            android:layout_marginBottom="10px"
            android:orientation="vertical"
            android:padding="10px"
            android:visibility="visible">


            <TextView
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1px"
                android:layout_weight="1"
                android:gravity="left|center_vertical|center_horizontal|center|start"
                android:singleLine="true"
                android:tag="35"
                android:text="zdczxv"
                android:textColor="@color/text_color_new"
                android:textSize="35px" />

            <RelativeLayout
                android:id="@+id/linLayoutAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"

                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_contact_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="1px"
                    android:gravity="start"
                    android:maxLines="1"
                    android:tag="35"
                    android:text="fdfd"
                    android:textColor="@color/hint_text_color_new"
                    android:textSize="35px" />

                <TextView
                    android:id="@+id/text_invoice_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:paddingLeft="1px"
                    android:paddingRight="1px"
                    android:tag="35"
                    android:text="dfd"
                    android:textColor="@color/hint_text_color_new"
                    android:textSize="35px" />

                <TextView
                    android:id="@+id/text_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:paddingLeft="8px"
                    android:paddingRight="1px"
                    android:text="zdczxv"
                    android:textColor="@color/hint_text_color_new"
                    android:textSize="35px"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linLayoutAmountf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"

                android:gravity="center"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/text_invoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:paddingLeft="1px"
                    android:paddingRight="1px"
                    android:tag="35"
                    android:text="zdczxv"
                    android:textColor="@color/hint_text_color_new"
                    android:textSize="35px" />


                <TextView
                    android:id="@+id/text_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:paddingLeft="8px"
                    android:paddingRight="1px"
                    android:text="zdczxv"
                    android:textColor="@color/hint_text_color_new"
                    android:textSize="35px"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/text_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"

                    android:layout_weight="1"
                    android:gravity="bottom|right|center_vertical|center_horizontal|center|end"
                    android:paddingLeft="1px"
                    android:paddingRight="1px"

                    android:tag="35"
                    android:text="zdczxv"
                    android:textColor="@color/black"
                    android:textSize="35px"
                    android:textStyle="bold" />
            </RelativeLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:id="@+id/linear"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:layout_below="@+id/cibact_RLDetail"

                android:layout_marginTop="10px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_details"
                    android:layout_width="258px"
                    android:layout_height="88px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="11px"
                    android:layout_marginTop="7px"
                    android:layout_marginRight="10px"
                    android:background="@drawable/status_accepted"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingLeft="0px"
                    android:paddingRight="5px"
                    android:paddingBottom="4px"
                    android:tag="34"
                    android:text="View Details"
                    android:textColor="@color/white"
                    android:textSize="34px"
                    />

                <TextView
                    android:id="@+id/text_create_invoice"
                    android:layout_width="258px"
                    android:layout_height="88px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="11px"
                    android:layout_marginTop="7px"
                    android:layout_marginRight="10px"
                    android:background="@drawable/status_accepted"
                    android:backgroundTint="#F44336"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingLeft="0px"
                    android:paddingRight="5px"
                    android:paddingBottom="4px"
                    android:tag="34"
                    android:text="Print"
                    android:textColor="@color/white"
                    android:textSize="34px" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/text_update"
                    android:layout_width="228px"
                    android:layout_height="58px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="11px"
                    android:layout_marginTop="7px"
                    android:layout_marginRight="10px"
                    android:background="@drawable/status_accepted"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingLeft="0px"
                    android:paddingRight="5px"
                    android:paddingBottom="4px"
                    android:tag="34"
                    android:text="update"
                    android:textColor="@color/white"
                    android:textSize="34px"
                    />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/text_delete"
                    android:backgroundTint="#FF5722"
                    android:layout_width="228px"
                    android:layout_height="58px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="11px"
                    android:layout_marginTop="7px"
                    android:layout_marginRight="10px"
                    android:background="@drawable/status_accepted"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingLeft="0px"
                    android:paddingRight="5px"
                    android:paddingBottom="4px"
                    android:tag="34"
                    android:text="delete"
                    android:textColor="@color/white"
                    android:textSize="34px"
                    />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/rcl_this_customer_list"


                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10px"
                android:layout_marginBottom="0px"


                android:nestedScrollingEnabled="false"


                >

            </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>